{
  "name": "flatry",
  "version": "1.0.13",
  "description": "Flatry converting promise or function to flat array response. Inspired by golang style error handling without try/catch.",
  "keywords": [
    "flat",
    "flatten",
    "promise",
    "async",
    "await",
    "golang",
    "error handling",
    "destructuring",
    "try",
    "catch"
  ],
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc index.ts --declaration --target esnext --outDir esm",
    "build:cjs": "tsc index.ts --declaration --module commonjs --outDir cjs",
    "postbuild": "npm run test",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ymatuhin/flatry.git"
  },
  "author": "ymatuhin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ymatuhin/flatry/issues"
  },
  "homepage": "https://github.com/ymatuhin/flatry#readme",
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^29.4.0",
    "babel-jest": "^29.4.1",
    "jest": "^29.4.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "is-promise": "^4.0.0"
  }
}
